<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="false"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Window Size"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/graph1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graph2" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="false"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Sample Rate"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/graph2"
        app:layout_constraintEnd_toStartOf="@+id/seekBar1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/seekBar1"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:max="10"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:progress="5"
        android:thumb="@android:drawable/ic_notification_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="100%" />

    <SeekBar
        android:id="@+id/seekBar2"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="false"
        android:clickable="false"
        android:max="10"
        android:progress="5"
        android:thumb="@android:drawable/ic_notification_overlay"
        app:layout_constraintBottom_toTopOf="@id/graph1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@id/graph2"
        app:layout_constraintWidth_percent="100%" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph2"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_margin="8dp"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@id/seekBar2"
        app:layout_constraintHeight_max="300dp"
        app:layout_constraintHeight_min="150dp"
        app:layout_constraintHeight_percent="40%"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBar1"
        app:layout_constraintWidth_percent="90%" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph1"
        android:layout_width="0dp"
        android:layout_height="274dp"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="200dp"
        app:layout_constraintHeight_min="150dp"
        app:layout_constraintHeight_percent="40%"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBar2"
        app:layout_constraintWidth_percent="90%" />


</android.support.constraint.ConstraintLayout>